{
    "name": "subjective-php/mongodb-helper",
    "description": "Collection of classes to assist with various mongodb operations",
    "license": "MIT",
    "require": {
        "php": "^7.0",
        "ext-mongodb": "^1.0",
        "mongodb/mongodb": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "SubjectivePHP\\MongoDB\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SubjectivePHPTest\\MongoDB\\": "tests"
        }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs",
        "test": "vendor/bin/phpunit"
    }
}
